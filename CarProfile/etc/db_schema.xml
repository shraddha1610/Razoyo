<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="razoyo_carprofile" resource="default" engine="innodb" comment="Razoyo Car Table">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="text" name="customer_id" nullable="true" comment="Customer Id"/>
        <column xsi:type="varchar" name="cars_ids" nullable="true" length="255" comment="Car ids"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>